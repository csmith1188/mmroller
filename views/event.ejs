<%- include('partials/header', { title: event.name }) %>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h1 class="h4 mb-0"><%= event.name %></h1>
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        Organization: <a href="/organizations/<%= event.organization_id %>"><%= event.organization_name %></a>
                    </p>
                    <% if (event.is_admin) { %>
                        <form action="/events/<%= event.id %>/update" method="POST" class="mb-4">
                            <div class="mb-3">
                                <label for="name" class="form-label">Event Name</label>
                                <input type="text" class="form-control" id="name" name="name" value="<%= event.name %>" required>
                            </div>
                            <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <textarea class="form-control" id="description" name="description" rows="3"><%= event.description || '' %></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Update Event</button>
                        </form>
                    <% } else { %>
                        <% if (event.description) { %>
                            <p><%- event.description %></p>
                        <% } %>
                    <% } %>
                    
                    <% if (event.is_admin) { %>
                        <div class="card mt-4">
                            <div class="card-header">
                                <h5 class="mb-0">Participant Custom Details</h5>
                            </div>
                            <div class="card-body">
                                <form id="customFieldsForm" action="/events/<%= event.id %>/custom-fields" method="POST">
                                    <div id="customFieldsContainer">
                                        <% if (customFields && customFields.length > 0) { %>
                                            <% customFields.forEach((field, index) => { %>
                                                <div class="custom-field mb-3" data-field-id="<%= field.id %>">
                                                    <input type="hidden" name="field_ids[]" value="<%= field.id %>">
                                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                                        <h6 class="mb-0">Field #<%= index + 1 %></h6>
                                                        <button type="button" class="btn btn-sm btn-outline-danger remove-field">Remove</button>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label">Field Name</label>
                                                        <input type="text" class="form-control" name="fields[<%= field.id %>][field_name]" value="<%= field.field_name %>" required>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label">Description (Optional)</label>
                                                        <textarea class="form-control" name="fields[<%= field.id %>][field_description]" rows="2"><%= field.field_description || '' %></textarea>
                                                    </div>
                                                    <div class="mb-3">
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" name="fields[<%= field.id %>][is_required]" id="required<%= field.id %>" value="1" <%= field.is_required ? 'checked' : '' %>>
                                                            <label class="form-check-label" for="required<%= field.id %>">Required Field</label>
                                                        </div>
                                                    </div>
                                                    <div class="mb-3">
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" name="fields[<%= field.id %>][is_private]" id="private<%= field.id %>" value="1" <%= field.is_private ? 'checked' : '' %>>
                                                            <label class="form-check-label" for="private<%= field.id %>">Private Field (only visible to admins and the participant)</label>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% }); %>
                                        <% } %>
                                    </div>
                                    <button type="button" class="btn btn-outline-primary" id="addFieldBtn">Add New Field</button>
                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                </form>
                            </div>
                        </div>
                    <% } %>
                    
                    <h5 class="mt-4">Participants</h5>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Player</th>
                                    <th class="text-end">MMR</th>
                                    <th class="text-end">Matches</th>
                                    <th class="text-end">W/L</th>
                                    <% if (event.is_admin) { %>
                                        <th class="text-end">Actions</th>
                                    <% } %>
                                </tr>
                            </thead>
                            <tbody>
                                <% participants.forEach(participant => { %>
                                    <tr>
                                        <td>
                                            <a href="/events/<%= event.id %>/participants/<%= participant.id %>" class="text-decoration-none">
                                                <%= participant.display_name %>
                                            </a>
                                        </td>
                                        <td class="text-end">
                                            <% if (event.is_admin) { %>
                                                <button type="button" 
                                                        class="btn btn-link p-0 text-decoration-none" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#editMMRModal<%= participant.id %>">
                                                    <span class="badge bg-primary"><%= participant.mmr %></span>
                                                </button>
                                            <% } else { %>
                                                <span class="badge bg-primary"><%= participant.mmr %></span>
                                            <% } %>
                                        </td>
                                        <td class="text-end"><%= participant.matches_played %></td>
                                        <td class="text-end">
                                            <span class="text-success"><%= participant.wins %></span>
                                            /
                                            <span class="text-danger"><%= participant.losses %></span>
                                        </td>
                                        <% if (event.is_admin) { %>
                                            <td class="text-end">
                                                <% if (!participant.is_creator) { %>
                                                    <div class="dropdown">
                                                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                            Actions
                                                        </button>
                                                        <ul class="dropdown-menu dropdown-menu-end">
                                                            <% if (participant.is_banned) { %>
                                                                <li>
                                                                    <button type="button" class="dropdown-item text-success" data-bs-toggle="modal" data-bs-target="#unbanModal<%= participant.id %>">
                                                                        Unban
                                                                    </button>
                                                                </li>
                                                            <% } else { %>
                                                                <li>
                                                                    <button type="button" class="dropdown-item text-danger" data-bs-toggle="modal" data-bs-target="#kickModal<%= participant.id %>">
                                                                        Kick
                                                                    </button>
                                                                </li>
                                                                <li>
                                                                    <button type="button" class="dropdown-item text-danger" data-bs-toggle="modal" data-bs-target="#banModal<%= participant.id %>">
                                                                        Ban
                                                                    </button>
                                                                </li>
                                                            <% } %>
                                                        </ul>
                                                    </div>

                                                    <!-- Edit MMR Modal -->
                                                    <div class="modal fade" id="editMMRModal<%= participant.id %>" tabindex="-1">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Edit MMR for <%= participant.display_name %></h5>
                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <form action="/events/<%= event.id %>/participants/<%= participant.id %>/mmr" method="POST">
                                                                        <div class="mb-3">
                                                                            <label for="mmr" class="form-label">New MMR</label>
                                                                            <input type="number" class="form-control" id="mmr" name="mmr" value="<%= participant.mmr %>" required>
                                                                        </div>
                                                                        <div class="text-end">
                                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                            <button type="submit" class="btn btn-primary">Update MMR</button>
                                                                        </div>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <!-- Unban Modal -->
                                                    <div class="modal fade" id="unbanModal<%= participant.id %>" tabindex="-1">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Unban Participant</h5>
                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <p>Are you sure you want to unban <strong><%= participant.display_name %></strong> from this event?</p>
                                                                    <p>They will be able to rejoin the event.</p>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                    <form action="/events/<%= event.id %>/unban/<%= participant.id %>" method="POST">
                                                                        <button type="submit" class="btn btn-success">Unban</button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <!-- Kick Modal -->
                                                    <div class="modal fade" id="kickModal<%= participant.id %>" tabindex="-1">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Kick Participant</h5>
                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <p>Are you sure you want to kick <strong><%= participant.display_name %></strong> from this event?</p>
                                                                    <p class="text-danger">This will remove them from the event and mark their matches as forfeit.</p>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                    <form action="/events/<%= event.id %>/kick/<%= participant.id %>" method="POST">
                                                                        <button type="submit" class="btn btn-danger">Kick</button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <!-- Ban Modal -->
                                                    <div class="modal fade" id="banModal<%= participant.id %>" tabindex="-1">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Ban Participant</h5>
                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <p>Are you sure you want to ban <strong><%= participant.display_name %></strong> from this event?</p>
                                                                    <p class="text-danger">This will kick them from the event and prevent them from rejoining.</p>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                    <form action="/events/<%= event.id %>/ban/<%= participant.id %>" method="POST">
                                                                        <button type="submit" class="btn btn-danger">Ban</button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                <% } %>
                                            </td>
                                        <% } %>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                    
                    <h5 class="mt-4">Matches</h5>
                    <% if (event.is_admin) { %>
                        <a href="/events/<%= event.id %>/matches/new" class="btn btn-primary mb-3">Create New Match</a>
                    <% } %>
                    
                    <% if (matches.length === 0) { %>
                        <p>No matches yet.</p>
                    <% } else { %>
                        <div class="list-group">
                            <% matches.forEach(match => { %>
                                <a href="/matches/<%= match.id %>" class="list-group-item list-group-item-action">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">Match #<%= match.id %></h6>
                                            <small class="text-muted">
                                                Players: <%= match.player_names.join(', ') %>
                                            </small>
                                        </div>
                                        <span class="badge bg-<%= match.status === 'completed' ? 'success' : (match.status === 'forfeit' ? 'danger' : 'warning') %>">
                                            <%= match.status %>
                                        </span>
                                    </div>
                                </a>
                            <% }); %>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <% if (event.is_admin && applications.length > 0) { %>
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Applications</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            <% applications.forEach(application => { %>
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1"><%= application.display_name %></h6>
                                            <small class="text-muted">
                                                Applied: <%= new Date(application.applied_at).toLocaleString() %>
                                            </small>
                                        </div>
                                        <div>
                                            <form action="/events/<%= event.id %>/accept/<%= application.user_id %>" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-success btn-sm">Accept</button>
                                            </form>
                                            <form action="/events/<%= event.id %>/reject/<%= application.user_id %>" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
            <% } %>
            
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Event Details</h5>
                </div>
                <div class="card-body">
                    <% if (event.is_admin) { %>
                        <form action="/events/<%= event.id %>/update-dates" method="POST" class="mb-3">
                            <div class="mb-3">
                                <label for="start_date" class="form-label">Start Date</label>
                                <input type="datetime-local" class="form-control" id="start_date" name="start_date" 
                                    value="<%= event.start_date ? new Date(event.start_date).toISOString().slice(0, 16) : '' %>">
                            </div>
                            <div class="mb-3">
                                <label for="end_date" class="form-label">End Date</label>
                                <input type="datetime-local" class="form-control" id="end_date" name="end_date"
                                    value="<%= event.end_date ? new Date(event.end_date).toISOString().slice(0, 16) : '' %>">
                            </div>
                            <button type="submit" class="btn btn-primary">Update Dates</button>
                        </form>
                    <% } else { %>
                        <% if (event.start_date) { %>
                            <p class="card-text">
                                Start Date: <%= new Date(event.start_date).toLocaleDateString() %>
                            </p>
                        <% } %>
                        <% if (event.end_date) { %>
                            <p class="card-text">
                                End Date: <%= new Date(event.end_date).toLocaleDateString() %>
                            </p>
                        <% } %>
                    <% } %>
                    
                    <% if (event.is_admin) { %>
                        <form action="/events/<%= event.id %>/toggle-visibility" method="POST" class="mb-3">
                            <button type="submit" class="btn btn-<%= event.hidden ? 'success' : 'warning' %>">
                                <i class="bi bi-eye<%= event.hidden ? '-slash' : '' %>"></i>
                                <%= event.hidden ? 'Show Event' : 'Hide Event' %>
                            </button>
                        </form>

                        <div class="mb-3">
                            <div class="mb-2">
                                <strong>Scoring System:</strong>
                                <span class="badge bg-info"><%= event.lowest_score_wins ? 'Lowest Score Wins' : 'Highest Score Wins' %></span>
                            </div>
                            <form action="/events/<%= event.id %>/toggle-scoring" method="POST">
                                <button type="submit" class="btn btn-outline-primary btn-sm">
                                    Switch to <%= event.lowest_score_wins ? 'Highest' : 'Lowest' %> Score Wins
                                </button>
                            </form>
                        </div>
                    <% } else { %>
                        <div class="mb-3">
                            <strong>Scoring System:</strong>
                            <span class="badge bg-info"><%= event.lowest_score_wins ? 'Lowest Score Wins' : 'Highest Score Wins' %></span>
                        </div>
                    <% } %>
                    
                    <% if (!event.is_participant) { %>
                        <% if (hasApplied) { %>
                            <button type="button" class="btn btn-secondary" disabled>Application Pending</button>
                        <% } else { %>
                            <form action="/events/<%= event.id %>/apply" method="POST">
                                <button type="submit" class="btn btn-primary">Apply to Join</button>
                            </form>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const customFieldsForm = document.getElementById('customFieldsForm');
    const customFieldsContainer = document.getElementById('customFieldsContainer');
    const addFieldBtn = document.getElementById('addFieldBtn');
    let fieldCount = <%- customFields ? customFields.length : 0 %>;

    // Add new field
    addFieldBtn.addEventListener('click', function() {
        const newFieldId = 'new_' + Date.now();
        const newField = document.createElement('div');
        newField.className = 'custom-field mb-3';
        newField.dataset.fieldId = newFieldId;
        
        newField.innerHTML = `
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h6 class="mb-0">Field #${++fieldCount}</h6>
                <button type="button" class="btn btn-sm btn-outline-danger remove-field">Remove</button>
            </div>
            <div class="mb-3">
                <label class="form-label">Field Name</label>
                <input type="text" class="form-control" name="fields[${newFieldId}][field_name]" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Description (Optional)</label>
                <textarea class="form-control" name="fields[${newFieldId}][field_description]" rows="2"></textarea>
            </div>
            <div class="mb-3">
                <div class="form-check">
                    <input type="hidden" name="fields[${newFieldId}][required_hidden]" value="0">
                    <input class="form-check-input" type="checkbox" name="fields[${newFieldId}][is_required]" id="required${newFieldId}" value="1">
                    <label class="form-check-label" for="required${newFieldId}">Required Field</label>
                </div>
            </div>
            <div class="mb-3">
                <div class="form-check">
                    <input type="hidden" name="fields[${newFieldId}][private_hidden]" value="0">
                    <input class="form-check-input" type="checkbox" name="fields[${newFieldId}][is_private]" id="private${newFieldId}" value="1">
                    <label class="form-check-label" for="private${newFieldId}">Private Field (only visible to admins and the participant)</label>
                </div>
            </div>
        `;
        
        customFieldsContainer.appendChild(newField);
    });

    // Remove field
    customFieldsContainer.addEventListener('click', function(e) {
        if (e.target.classList.contains('remove-field')) {
            const field = e.target.closest('.custom-field');
            field.remove();
            // Update field numbers
            const fields = customFieldsContainer.querySelectorAll('.custom-field');
            fields.forEach((field, index) => {
                field.querySelector('h6').textContent = `Field #${index + 1}`;
            });
            fieldCount = fields.length;
        }
    });
});
</script> 