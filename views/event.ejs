<%- include('partials/header', { title: event.name }) %>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h1 class="h4 mb-0"><%= event.name %></h1>
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        Organization: <a href="/organizations/<%= event.organization_id %>"><%= event.organization_name %></a>
                    </p>
                    <% if (event.is_admin || event.is_organizer) { %>
                        <form action="/events/<%= event.id %>/update" method="POST" class="mb-4">
                            <div class="mb-3">
                                <label for="name" class="form-label">Event Name</label>
                                <input type="text" class="form-control" id="name" name="name" value="<%= event.name %>" required>
                            </div>
                            <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <textarea class="form-control" id="description" name="description" rows="3"><%= event.description || '' %></textarea>
                            </div>
                            <% if (event.is_admin || event.is_organizer) { %>
                                <div class="mb-3">
                                    <label class="form-label">Event Visibility</label>
                                    <div class="btn-group w-100" role="group">
                                        <input type="radio" class="btn-check visibility-radio" name="visibility" id="visibility_hidden" value="hidden" autocomplete="off" 
                                               <%= event.visibility === 'hidden' ? 'checked' : '' %>>
                                        <label class="btn btn-outline-secondary" for="visibility_hidden" title="Event is hidden from listings">
                                            Hidden
                                        </label>

                                        <input type="radio" class="btn-check visibility-radio" name="visibility" id="visibility_private" value="private" autocomplete="off"
                                               <%= event.visibility === 'private' ? 'checked' : '' %>>
                                        <label class="btn btn-outline-secondary" for="visibility_private" title="Only organization members can view and join">
                                            Private
                                        </label>

                                        <input type="radio" class="btn-check visibility-radio" name="visibility" id="visibility_public" value="public" autocomplete="off"
                                               <%= event.visibility === 'public' ? 'checked' : '' %>>
                                        <label class="btn btn-outline-secondary" for="visibility_public" title="Anyone can view, but only organization members can join">
                                            Public
                                        </label>

                                        <input type="radio" class="btn-check visibility-radio" name="visibility" id="visibility_open" value="open" autocomplete="off"
                                               <%= event.visibility === 'open' ? 'checked' : '' %>>
                                        <label class="btn btn-outline-secondary" for="visibility_open" title="Anyone can view and join">
                                            Open
                                        </label>
                                    </div>
                                    <div class="form-text mt-1" id="visibility-description">
                                        <%= event.visibility === 'hidden' ? 'Event is hidden from listings' :
                                            event.visibility === 'private' ? 'Only organization members can view and join' :
                                            event.visibility === 'public' ? 'Anyone can view, but only organization members can join' :
                                            'Anyone can view and join' %>
                                    </div>
                                </div>
                            <% } %>
                            <button type="submit" class="btn btn-primary">Update Event</button>
                        </form>
                    <% } else { %>
                        <% if (event.description) { %>
                            <p><%- event.description %></p>
                        <% } %>
                    <% } %>
                    
                    <% if (event.is_admin || event.is_organizer) { %>
                        <div class="card mt-4">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">Participant Custom Details</h5>
                                <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#participantCustomFields">
                                    Toggle
                                </button>
                            </div>
                            <div class="collapse" id="participantCustomFields">
                                <div class="card-body">
                                    <form id="customFieldsForm" action="/events/<%= event.id %>/custom-fields" method="POST">
                                        <div id="customFieldsContainer">
                                            <% if (customFields && customFields.length > 0) { %>
                                                <% customFields.forEach((field, index) => { %>
                                                    <div class="custom-field mb-3" data-field-id="<%= field.id %>">
                                                        <input type="hidden" name="field_ids[]" value="<%= field.id %>">
                                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                                            <h6 class="mb-0">Field #<%= index + 1 %></h6>
                                                            <button type="button" class="btn btn-sm btn-outline-danger remove-field">Remove</button>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label">Field Name</label>
                                                            <input type="text" class="form-control" name="fields[<%= field.id %>][field_name]" value="<%= field.field_name %>" required>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label">Field Description</label>
                                                            <input type="text" class="form-control" name="fields[<%= field.id %>][field_description]" value="<%= field.field_description || '' %>">
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label">Field Type</label>
                                                            <select class="form-select" name="fields[<%= field.id %>][field_type]" required>
                                                                <option value="short" <%= field.field_type === 'short' ? 'selected' : '' %>>Short Text</option>
                                                                <option value="long" <%= field.field_type === 'long' ? 'selected' : '' %>>Long Text</option>
                                                                <option value="number" <%= field.field_type === 'number' ? 'selected' : '' %>>Number</option>
                                                                <option value="date" <%= field.field_type === 'date' ? 'selected' : '' %>>Date</option>
                                                            </select>
                                                        </div>
                                                        <div class="mb-3">
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" name="fields[<%= field.id %>][is_required]" id="required<%= field.id %>" value="1" <%= field.is_required ? 'checked' : '' %>>
                                                                <label class="form-check-label" for="required<%= field.id %>">Required Field</label>
                                                            </div>
                                                        </div>
                                                        <div class="mb-3">
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" name="fields[<%= field.id %>][is_private]" id="private<%= field.id %>" value="1" <%= field.is_private ? 'checked' : '' %>>
                                                                <label class="form-check-label" for="private<%= field.id %>">Private Field (only visible to admins and the participant)</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                <% }); %>
                                            <% } %>
                                        </div>
                                        <button type="button" class="btn btn-outline-primary" id="addFieldBtn">Add New Field</button>
                                        <button type="submit" class="btn btn-primary">Save Changes</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% } %>
                    
                    <h5 class="mt-4">Participants</h5>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Player</th>
                                    <th class="text-end">MMR</th>
                                    <th class="text-end">W/M</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% participants.forEach(participant => { %>
                                    <tr class="participant-row" data-participant-id="<%= participant.id %>">
                                        <td>
                                            <%= participant.display_name %>
                                            <% if (participant.is_organizer) { %>
                                                <span class="badge bg-primary ms-2">Event Admin</span>
                                            <% } %>
                                            <% if (participant.is_org_admin) { %>
                                                <span class="badge bg-info ms-2">Org Admin</span>
                                            <% } %>
                                        </td>
                                        <td class="text-end">
                                            <span class="badge bg-primary"><%= participant.mmr %></span>
                                        </td>
                                        <td class="text-end">
                                            <span class="text-success"><%= participant.wins || 0 %></span>
                                            /
                                            <span><%= participant.matches_played || 0 %></span>
                                        </td>
                                    </tr>
                                    <tr class="participant-actions d-none" data-participant-id="<%= participant.id %>">
                                        <td colspan="3" class="bg-light">
                                            <div class="d-flex justify-content-end gap-2">
                                                <a href="/events/<%= event.id %>/participants/<%= participant.id %>" class="btn btn-sm btn-outline-primary">
                                                    Profile
                                                </a>
                                                <% if (event.is_admin || event.is_organizer) { %>
                                                    <button type="button" 
                                                            class="btn btn-sm btn-outline-primary" 
                                                            data-bs-toggle="modal" 
                                                            data-bs-target="#editMMRModal<%= participant.id %>">
                                                        MMR
                                                    </button>
                                                    <% if (participant.is_banned) { %>
                                                        <button type="button" class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#unbanModal<%= participant.id %>">
                                                            Unban
                                                        </button>
                                                    <% } else { %>
                                                        <% if (participant.user_id !== userId) { %>
                                                            <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#banModal<%= participant.id %>">
                                                                Ban
                                                            </button>
                                                            <button type="button" class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#kickModal<%= participant.id %>">
                                                                Kick
                                                            </button>
                                                        <% } %>
                                                    <% } %>
                                                    <% if (!participant.is_organizer) { %>
                                                        <% if (participant.user_id !== userId) { %>
                                                            <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#promoteModal<%= participant.id %>">
                                                                Promote
                                                            </button>
                                                        <% } %>
                                                    <% } else { %>
                                                        <% if (participant.user_id !== userId) { %>
                                                            <button type="button" class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#demoteModal<%= participant.id %>">
                                                                Demote
                                                            </button>
                                                        <% } %>
                                                    <% } %>
                                                <% } %>
                                            </div>
                                        </td>
                                    </tr>

                                    <!-- Edit MMR Modal -->
                                    <div class="modal fade" id="editMMRModal<%= participant.id %>" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Edit MMR for <%= participant.display_name %></h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <form action="/events/<%= event.id %>/participants/<%= participant.id %>/mmr" method="POST">
                                                        <div class="mb-3">
                                                            <label for="mmr" class="form-label">New MMR</label>
                                                            <input type="number" class="form-control" id="mmr" name="mmr" value="<%= participant.mmr %>" required>
                                                        </div>
                                                        <div class="text-end">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                            <button type="submit" class="btn btn-primary">Update MMR</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Unban Modal -->
                                    <div class="modal fade" id="unbanModal<%= participant.id %>" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Unban Participant</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Are you sure you want to unban <strong><%= participant.display_name %></strong> from this event?</p>
                                                    <p>They will be able to rejoin the event.</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <form action="/events/<%= event.id %>/unban/<%= participant.id %>" method="POST">
                                                        <button type="submit" class="btn btn-success">Unban</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Promote Modal -->
                                    <div class="modal fade" id="promoteModal<%= participant.id %>" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Promote to Event Organizer</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Are you sure you want to promote <strong><%= participant.display_name %></strong> to Event Organizer?</p>
                                                    <p>They will have full admin access to this event.</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <form action="/events/<%= event.id %>/promote/<%= participant.id %>" method="POST">
                                                        <button type="submit" class="btn btn-primary">Promote</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Demote Modal -->
                                    <div class="modal fade" id="demoteModal<%= participant.id %>" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Demote from Event Organizer</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Are you sure you want to demote <strong><%= participant.display_name %></strong> from Event Organizer?</p>
                                                    <p>They will lose admin access to this event.</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <form action="/events/<%= event.id %>/demote/<%= participant.id %>" method="POST">
                                                        <button type="submit" class="btn btn-warning">Demote</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Kick Modal -->
                                    <div class="modal fade" id="kickModal<%= participant.id %>" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Kick Participant</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Are you sure you want to kick <strong><%= participant.display_name %></strong> from this event?</p>
                                                    <p class="text-danger">This will remove them from the event and mark their matches as forfeit.</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <form action="/events/<%= event.id %>/kick/<%= participant.id %>" method="POST">
                                                        <button type="submit" class="btn btn-danger">Kick</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Ban Modal -->
                                    <div class="modal fade" id="banModal<%= participant.id %>" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Ban Participant</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Are you sure you want to ban <strong><%= participant.display_name %></strong> from this event?</p>
                                                    <p class="text-danger">This will kick them from the event and prevent them from rejoining.</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <form action="/events/<%= event.id %>/ban/<%= participant.id %>" method="POST">
                                                        <button type="submit" class="btn btn-danger">Ban</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>

                    <style>
                        .participant-row {
                            cursor: pointer;
                        }
                        .participant-row:hover {
                            background-color: rgba(0,0,0,.05);
                        }
                        .participant-actions {
                            background-color: rgba(0,0,0,.02);
                        }
                    </style>

                    <script>
                        document.addEventListener('DOMContentLoaded', function() {
                            const participantRows = document.querySelectorAll('.participant-row');
                            
                            participantRows.forEach(row => {
                                row.addEventListener('click', function() {
                                    const participantId = this.dataset.participantId;
                                    const actionsRow = document.querySelector(`.participant-actions[data-participant-id="${participantId}"]`);
                                    
                                    if (actionsRow) {
                                        actionsRow.classList.toggle('d-none');
                                    }
                                });
                            });
                        });
                    </script>
                    
                    <h5 class="mt-4">Matches</h5>
                    <% if (event.is_admin || event.is_organizer) { %>
                        <div class="card mb-4">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">Match Custom Fields</h5>
                                <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#matchCustomFields">
                                    Toggle
                                </button>
                            </div>
                            <div class="collapse" id="matchCustomFields">
                                <div class="card-body">
                                    <form id="matchCustomFieldsForm" action="/events/<%= event.id %>/match-fields" method="POST">
                                        <div id="matchCustomFieldsContainer">
                                            <% if (matchCustomFields && matchCustomFields.length > 0) { %>
                                                <% matchCustomFields.forEach((field, index) => { %>
                                                    <div class="custom-field mb-3" data-field-id="<%= field.id %>">
                                                        <input type="hidden" name="field_ids[]" value="<%= field.id %>">
                                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                                            <h6 class="mb-0">Field #<%= index + 1 %></h6>
                                                            <button type="button" class="btn btn-sm btn-outline-danger remove-field">Remove</button>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label">Field Name</label>
                                                            <input type="text" class="form-control" name="fields[<%= field.id %>][field_name]" value="<%= field.field_name %>" required>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label">Description</label>
                                                            <textarea class="form-control" name="fields[<%= field.id %>][field_description]" rows="2"><%= field.field_description %></textarea>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label">Field Type</label>
                                                            <select class="form-select" name="fields[<%= field.id %>][field_type]" required>
                                                                <option value="short" <%= field.field_type === 'short' ? 'selected' : '' %>>Short Text</option>
                                                                <option value="long" <%= field.field_type === 'long' ? 'selected' : '' %>>Long Text</option>
                                                                <option value="number" <%= field.field_type === 'number' ? 'selected' : '' %>>Number</option>
                                                                <option value="date" <%= field.field_type === 'date' ? 'selected' : '' %>>Date</option>
                                                            </select>
                                                        </div>
                                                        <div class="mb-3">
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" name="fields[<%= field.id %>][is_required]" id="required<%= field.id %>" value="1" <%= field.is_required ? 'checked' : '' %>>
                                                                <label class="form-check-label" for="required<%= field.id %>">Required Field</label>
                                                            </div>
                                                        </div>
                                                        <div class="mb-3">
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" name="fields[<%= field.id %>][is_private]" id="private<%= field.id %>" value="1" <%= field.is_private ? 'checked' : '' %>>
                                                                <label class="form-check-label" for="private<%= field.id %>">Private Field (only visible to admins)</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                <% }); %>
                                            <% } %>
                                        </div>
                                        <button type="button" class="btn btn-outline-primary" id="addMatchFieldBtn">Add New Field</button>
                                        <button type="submit" class="btn btn-primary">Save Changes</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% } %>
                    
                    <% if (event.is_admin || event.is_organizer) { %>
                        <div class="d-grid gap-2">
                            <a href="/events/<%= event.id %>/matches/new" class="btn btn-primary">Create New Match</a>
                        </div>
                    <% } %>
                    
                    <% if (matches.length === 0) { %>
                        <p>No matches yet.</p>
                    <% } else { %>
                        <div class="list-group">
                            <% matches.forEach(match => { %>
                                <a href="/matches/<%= match.id %>" class="list-group-item list-group-item-action">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">Match #<%= match.id %></h6>
                                            <small class="text-muted">
                                                Players: <%= match.player_names.join(', ') %>
                                            </small>
                                        </div>
                                        <span class="badge bg-<%= match.status === 'completed' ? 'success' : (match.status === 'forfeit' ? 'danger' : 'warning') %>">
                                            <%= match.status %>
                                        </span>
                                    </div>
                                </a>
                            <% }); %>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Event Details</h5>
                </div>
                <div class="card-body">
                    <% if (event.is_admin || event.is_organizer) { %>
                        <form action="/events/<%= event.id %>/update-dates" method="POST" class="mb-3">
                            <div class="mb-3">
                                <label for="start_date" class="form-label">Start Date</label>
                                <input type="datetime-local" class="form-control" id="start_date" name="start_date" 
                                    value="<%= event.start_date ? new Date(event.start_date).toISOString().slice(0, 16) : '' %>" required>
                            </div>
                            <div class="mb-3">
                                <label for="end_date" class="form-label">End Date</label>
                                <input type="datetime-local" class="form-control" id="end_date" name="end_date"
                                    value="<%= event.end_date ? new Date(event.end_date).toISOString().slice(0, 16) : '' %>" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Update Dates</button>
                        </form>
                    <% } %>
                    
                    <div class="mb-3">
                        <strong>Start Date:</strong>
                        <span><%= event.start_date ? new Date(event.start_date).toLocaleString() : 'Not set' %></span>
                    </div>
                    <div class="mb-3">
                        <strong>End Date:</strong>
                        <span><%= event.end_date ? new Date(event.end_date).toLocaleString() : 'Not set' %></span>
                    </div>
                    
                    <% if (event.is_admin || event.is_organizer) { %>
                        <div class="mb-3">
                            <div class="mb-2">
                                <strong>Scoring System:</strong>
                                <span class="badge bg-info"><%= event.lowest_score_wins ? 'Lowest Score Wins' : 'Highest Score Wins' %></span>
                            </div>
                            <form action="/events/<%= event.id %>/toggle-scoring" method="POST">
                                <button type="submit" class="btn btn-outline-primary btn-sm">
                                    Switch to <%= event.lowest_score_wins ? 'Highest' : 'Lowest' %> Score Wins
                                </button>
                            </form>
                        </div>

                        <div class="mb-3">
                            <div class="mb-2">
                                <strong>Match Blind Sharing:</strong>
                                <span class="badge bg-<%= event.match_blind_sharing ? 'success' : 'secondary' %>">
                                    <%= event.match_blind_sharing ? 'Enabled' : 'Disabled' %>
                                </span>
                            </div>
                            <form action="/events/<%= event.id %>/toggle-blind-sharing" method="POST">
                                <button type="submit" class="btn btn-outline-primary btn-sm">
                                    <%= event.match_blind_sharing ? 'Disable' : 'Enable' %> Blind Sharing
                                </button>
                            </form>
                        </div>
                    <% } else { %>
                        <div class="mb-3">
                            <strong>Scoring System:</strong>
                            <span class="badge bg-info"><%= event.lowest_score_wins ? 'Lowest Score Wins' : 'Highest Score Wins' %></span>
                        </div>
                        <div class="mb-3">
                            <strong>Match Blind Sharing:</strong>
                            <span class="badge bg-<%= event.match_blind_sharing ? 'success' : 'secondary' %>">
                                <%= event.match_blind_sharing ? 'Enabled' : 'Disabled' %>
                            </span>
                        </div>
                    <% } %>
                    
                    <% if (!event.is_participant) { %>
                        <% if (hasApplied) { %>
                            <button type="button" class="btn btn-secondary" disabled>Application Pending</button>
                        <% } else { %>
                            <form action="/events/<%= event.id %>/apply" method="POST">
                                <button type="submit" class="btn btn-primary" <%= applyButtonDisabled ? 'disabled' : '' %>>
                                    <%= applyButtonText %>
                                </button>
                            </form>
                        <% } %>
                    <% } %>
                </div>
            </div>

            <% if ((event.is_admin || event.is_organizer) && applications.length > 0) { %>
                <div class="card mb-4 mt-4">
                    <div class="card-header">
                        <h5 class="mb-0">Applications</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            <% applications.forEach(application => { %>
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">
                                                <a href="/profile/<%= application.user_id %>" class="text-decoration-none">
                                                    <%= application.display_name %>
                                                </a>
                                            </h6>
                                            <small class="text-muted">
                                                Applied: <%= new Date(application.applied_at).toLocaleString() %>
                                            </small>
                                        </div>
                                        <div>
                                            <form action="/events/<%= event.id %>/accept/<%= application.user_id %>" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-success btn-sm">Accept</button>
                                            </form>
                                            <form action="/events/<%= event.id %>/reject/<%= application.user_id %>" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const customFieldsForm = document.getElementById('customFieldsForm');
    const customFieldsContainer = document.getElementById('customFieldsContainer');
    const addFieldBtn = document.getElementById('addFieldBtn');
    let fieldCount = <%- customFields ? customFields.length : 0 %>;

    // Add new field
    addFieldBtn.addEventListener('click', function() {
        const newFieldId = 'new_' + Date.now();
        const newField = document.createElement('div');
        newField.className = 'custom-field mb-3';
        newField.dataset.fieldId = newFieldId;
        
        newField.innerHTML = `
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h6 class="mb-0">Field #${++fieldCount}</h6>
                <button type="button" class="btn btn-sm btn-outline-danger remove-field">Remove</button>
            </div>
            <div class="mb-3">
                <label class="form-label">Field Name</label>
                <input type="text" class="form-control" name="fields[${newFieldId}][field_name]" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Field Type</label>
                <select class="form-select" name="fields[${newFieldId}][field_type]" required>
                    <option value="short">Short Text</option>
                    <option value="long">Long Text</option>
                    <option value="number">Number</option>
                    <option value="date">Date</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Field Description</label>
                <input type="text" class="form-control" name="fields[${newFieldId}][field_description]">
            </div>
            <div class="mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="fields[${newFieldId}][is_required]" id="required${newFieldId}" value="1">
                    <label class="form-check-label" for="required${newFieldId}">Required Field</label>
                </div>
            </div>
            <div class="mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="fields[${newFieldId}][is_private]" id="private${newFieldId}" value="1">
                    <label class="form-check-label" for="private${newFieldId}">Private Field (only visible to admins and the participant)</label>
                </div>
            </div>
            <input type="hidden" name="field_ids[]" value="${newFieldId}">
        `;
        
        customFieldsContainer.appendChild(newField);
    });

    // Remove field
    customFieldsContainer.addEventListener('click', function(e) {
        if (e.target.classList.contains('remove-field')) {
            const field = e.target.closest('.custom-field');
            field.remove();
            // Update field numbers
            const fields = customFieldsContainer.querySelectorAll('.custom-field');
            fields.forEach((field, index) => {
                field.querySelector('h6').textContent = `Field #${index + 1}`;
            });
            fieldCount = fields.length;
        }
    });

    // Visibility description handling
    const visibilityDescriptions = {
        'hidden': 'Event is hidden from listings',
        'private': 'Only organization members can view and join',
        'public': 'Anyone can view, but only organization members can join',
        'open': 'Anyone can view and join'
    };

    const visibilityRadios = document.querySelectorAll('.visibility-radio');
    const visibilityDescription = document.getElementById('visibility-description');

    visibilityRadios.forEach(radio => {
        radio.addEventListener('change', function() {
            visibilityDescription.textContent = visibilityDescriptions[this.value];
        });
    });
});

// Add match custom fields functionality
const matchCustomFieldsForm = document.getElementById('matchCustomFieldsForm');
const matchCustomFieldsContainer = document.getElementById('matchCustomFieldsContainer');
const addMatchFieldBtn = document.getElementById('addMatchFieldBtn');
let matchFieldCount = <%- matchCustomFields ? matchCustomFields.length : 0 %>;

// Add new match field
addMatchFieldBtn.addEventListener('click', function() {
    const newFieldId = 'new_' + Date.now();
    const newField = document.createElement('div');
    newField.className = 'custom-field mb-3';
    newField.dataset.fieldId = newFieldId;
    
    newField.innerHTML = `
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h6 class="mb-0">Field #${matchFieldCount + 1}</h6>
            <button type="button" class="btn btn-sm btn-outline-danger remove-field">Remove</button>
        </div>
        <div class="mb-3">
            <label class="form-label">Field Name</label>
            <input type="text" class="form-control" name="fields[${newFieldId}][field_name]" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea class="form-control" name="fields[${newFieldId}][field_description]" rows="2"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Field Type</label>
            <select class="form-select" name="fields[${newFieldId}][field_type]" required>
                <option value="short">Short Text</option>
                <option value="long">Long Text</option>
                <option value="number">Number</option>
                <option value="date">Date</option>
            </select>
        </div>
        <div class="mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="fields[${newFieldId}][is_required]" id="required${newFieldId}" value="1">
                <label class="form-check-label" for="required${newFieldId}">Required Field</label>
            </div>
        </div>
        <div class="mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="fields[${newFieldId}][is_private]" id="private${newFieldId}" value="1">
                <label class="form-check-label" for="private${newFieldId}">Private Field (only visible to admins)</label>
            </div>
        </div>
        <input type="hidden" name="field_ids[]" value="${newFieldId}">
    `;
    
    matchCustomFieldsContainer.appendChild(newField);
    matchFieldCount++;
});

// Remove match field
matchCustomFieldsContainer.addEventListener('click', function(e) {
    if (e.target.classList.contains('remove-field')) {
        const field = e.target.closest('.custom-field');
        field.remove();
        // Update field numbers
        const fields = matchCustomFieldsContainer.querySelectorAll('.custom-field');
        fields.forEach((field, index) => {
            field.querySelector('h6').textContent = `Field #${index + 1}`;
        });
        matchFieldCount = fields.length;
    }
});
</script> 