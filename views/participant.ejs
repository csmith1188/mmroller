<%- include('partials/header') %>

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2 class="mb-0"><%= participant.display_name %></h2>
            <small class="text-muted">Joined on <%= new Date(participant.created_at).toLocaleDateString() %></small>
        </div>
        <div class="card-body">
            <% if (messages && messages.length > 0) { %>
                <% messages.forEach(function(message) { %>
                    <div class="alert alert-<%= message.type %>">
                        <%= message.text %>
                    </div>
                <% }); %>
            <% } %>

            <% if (customFields && customFields.length > 0) { %>
                <form id="customFieldsForm" action="/events/<%= eventId %>/participants/<%= userId %>/responses" method="POST">
                    <% customFields.forEach(field => { %>
                        <% if (isViewingOwnProfile || isAdmin || !field.is_private) { %>
                            <div class="mb-3">
                                <label for="field_<%= field.id %>" class="form-label">
                                    <%= field.field_name %>
                                    <% if (field.is_required) { %>
                                        <span class="text-danger">*</span>
                                    <% } %>
                                    <% if (field.is_private) { %>
                                        <span class="badge bg-secondary ms-2">
                                            <i class="bi bi-lock-fill"></i> Private
                                        </span>
                                    <% } %>
                                </label>
                                <% if (field.field_description) { %>
                                    <small class="text-muted d-block"><%= field.field_description %></small>
                                <% } %>
                                <% if (isViewingOwnProfile) { %>
                                    <% if (field.field_type === 'number') { %>
                                        <input type="number" 
                                               class="form-control" 
                                               id="field_<%= field.id %>" 
                                               name="responses[<%= field.id %>]" 
                                               value="<%= field.response !== null ? field.response : '' %>"
                                               step="any"
                                               <%= field.is_required ? 'required' : '' %>>
                                    <% } else if (field.field_type === 'date') { %>
                                        <% 
                                            let dateValue = '';
                                            if (field.response) {
                                                try {
                                                    const date = new Date(field.response);
                                                    if (!isNaN(date.getTime())) {
                                                        // Format as YYYY-MM-DDThh:mm
                                                        dateValue = date.toISOString().slice(0, 16);
                                                    }
                                                } catch (e) {
                                                    // Invalid date, leave value empty
                                                }
                                            }
                                        %>
                                        <input type="datetime-local" 
                                               class="form-control" 
                                               id="field_<%= field.id %>" 
                                               name="responses[<%= field.id %>]" 
                                               value="<%= dateValue %>"
                                               <%= field.is_required ? 'required' : '' %>>
                                    <% } else if (field.field_type === 'long') { %>
                                        <textarea class="form-control" 
                                                  id="field_<%= field.id %>" 
                                                  name="responses[<%= field.id %>]" 
                                                  rows="4"
                                                  style="white-space: pre-wrap;"
                                                  <%= field.is_required ? 'required' : '' %>><%= field.response !== null ? field.response : '' %></textarea>
                                    <% } else { %>
                                        <input type="text" 
                                               class="form-control" 
                                               id="field_<%= field.id %>" 
                                               name="responses[<%= field.id %>]" 
                                               value="<%= field.response !== null ? field.response : '' %>"
                                               maxlength="128"
                                               <%= field.is_required ? 'required' : '' %>>
                                    <% } %>
                                <% } else { %>
                                    <p class="form-control-plaintext">
                                        <% if (field.field_type === 'date' && field.response) { %>
                                            <% 
                                                try {
                                                    const date = new Date(field.response);
                                                    if (!isNaN(date.getTime())) { %>
                                                        <%= date.toLocaleString() %>
                                                    <% } else { %>
                                                        <%= field.response %>
                                                    <% }
                                                } catch (e) { %>
                                                    <%= field.response %>
                                                <% }
                                            %>
                                        <% } else if (field.field_type === 'long') { %>
                                            <div style="white-space: pre-wrap;"><%= field.response !== null ? field.response : 'Not provided' %></div>
                                        <% } else { %>
                                            <%= field.response !== null ? field.response : 'Not provided' %>
                                        <% } %>
                                    </p>
                                <% } %>
                            </div>
                        <% } %>
                    <% }); %>
                    <% if (isViewingOwnProfile) { %>
                        <button type="submit" class="btn btn-primary">Save Responses</button>
                    <% } %>
                </form>
            <% } else { %>
                <p class="text-muted">No custom fields have been set up for this event.</p>
            <% } %>

            <h4 class="mt-4">Event Statistics</h4>
            <div class="row">
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body text-center">
                            <h6 class="card-title">MMR</h6>
                            <span class="badge bg-primary fs-5"><%= participant.mmr %></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body text-center">
                            <h6 class="card-title">Matches</h6>
                            <span class="fs-5"><%= participant.matches_played || 0 %></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body text-center">
                            <h6 class="card-title">Wins</h6>
                            <span class="text-success fs-5"><%= participant.wins || 0 %></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body text-center">
                            <h6 class="card-title">Losses</h6>
                            <span class="text-danger fs-5"><%= (participant.matches_played || 0) - (participant.wins || 0) %></span>
                        </div>
                    </div>
                </div>
            </div>

            <h4 class="mt-4">Match History</h4>
            <% if (matches && matches.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Match #</th>
                                <th>Players</th>
                                <th>Result</th>
                                <th>Status</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% matches.forEach(match => { %>
                                <tr>
                                    <td>
                                        <a href="/matches/<%= match.id %>" class="text-decoration-none">
                                            #<%= match.id %>
                                        </a>
                                    </td>
                                    <td><%= match.player_names.join(', ') %></td>
                                    <td>
                                        <% if (match.winner_id === participant.user_id) { %>
                                            <span class="text-success">Won</span>
                                        <% } else if (match.status === 'completed') { %>
                                            <span class="text-danger">Lost</span>
                                        <% } else if (match.status === 'forfeit') { %>
                                            <span class="text-danger">Forfeit</span>
                                        <% } else { %>
                                            <span class="text-warning">Pending</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <span class="badge bg-<%= match.status === 'completed' ? 'success' : (match.status === 'forfeit' ? 'danger' : 'warning') %>">
                                            <%= match.status %>
                                        </span>
                                    </td>
                                    <td><%= new Date(match.created_at).toLocaleString() %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p class="text-muted">No matches played yet.</p>
            <% } %>
        </div>
    </div>
</div>

<%- include('partials/footer') %> 