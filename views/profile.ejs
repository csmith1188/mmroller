<%- include('partials/header', { title: isViewingOwnProfile ? 'My Profile' : user.username + "'s Profile" }) %>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h2 class="mb-0"><%= isViewingOwnProfile ? 'My Profile' : user.username + "'s Profile" %></h2>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <h3>Basic Information</h3>
                            <p><strong>Username:</strong> <%= user.username %></p>
                            <% if (isViewingOwnProfile) { %>
                                <p><strong>Email:</strong> <%= user.email %></p>
                                <div class="mt-3">
                                    <a href="/profile/edit" class="btn btn-primary">Edit Profile</a>
                                    <a href="/profile/change-password" class="btn btn-secondary">Change Password</a>
                                </div>
                            <% } %>
                        </div>

                        <div class="mb-4">
                            <h3>Organizations</h3>
                            <% if (organizations.length === 0) { %>
                                <p>No organizations yet.</p>
                            <% } else { %>
                                <div class="list-group">
                                    <% organizations.forEach(org => { %>
                                        <a href="/organizations/<%= org.id %>" class="list-group-item list-group-item-action">
                                            <div class="d-flex w-100 justify-content-between">
                                                <h5 class="mb-1"><%= org.name %></h5>
                                                <% if (org.is_admin) { %>
                                                    <span class="badge bg-primary">Admin</span>
                                                <% } %>
                                            </div>
                                            <p class="mb-1"><%= org.description %></p>
                                            <small>Created on <%= new Date(org.created_at).toLocaleDateString() %></small>
                                        </a>
                                    <% }); %>
                                </div>
                            <% } %>
                        </div>

                        <div class="mb-4">
                            <h3>Events</h3>
                            <% if (organizations.length === 0) { %>
                                <p>No events yet.</p>
                            <% } else { %>
                                <% organizations.forEach(org => { %>
                                    <% if (org.events && org.events.length > 0) { %>
                                        <h4 class="mt-3"><%= org.name %> Events</h4>
                                        <div class="list-group">
                                            <% org.events.forEach(event => { %>
                                                <a href="/events/<%= event.id %>" class="list-group-item list-group-item-action">
                                                    <div class="d-flex w-100 justify-content-between">
                                                        <h5 class="mb-1"><%= event.name %></h5>
                                                        <% if (event.is_participant) { %>
                                                            <span class="badge bg-success">Participant</span>
                                                        <% } %>
                                                    </div>
                                                    <p class="mb-1"><%= event.description %></p>
                                                    <small>
                                                        <%= new Date(event.start_date).toLocaleDateString() %> to 
                                                        <%= new Date(event.end_date).toLocaleDateString() %>
                                                    </small>
                                                </a>
                                            <% }); %>
                                        </div>
                                    <% } %>
                                <% }); %>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('partials/footer') %> 